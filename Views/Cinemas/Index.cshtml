@{
    ViewData["title"] = "List Of Cinemas";
}
@model IEnumerable<Cinema>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr style="text-align:center">
                    <th class="align-middle">@Html.DisplayNameFor(cinema=>cinema.Logo)</th>
                    <th class="align-middle">@Html.DisplayNameFor(cinema=>cinema.Name)</th>
                    <th class="align-middle">@Html.DisplayNameFor(cinema=>cinema.Description)</th>
                    <th class="align-middle">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@cinema.Logo" alt="@cinema.Name" class="rounded-circle" style="max-width:150px">
                        </td>
                        <td class="align-middle">
                            @cinema.Name
                        </td>
                        <td class="align-middle">
                            @cinema.Description
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary"><i class="bi bi-pen"></i>Edit</a> |
                            <a class="btn btn-info"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-danger text-light"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
