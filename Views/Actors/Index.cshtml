
@{
    ViewData["title"] = "List Of Actors";
}
@model IEnumerable<Actor>

<div class="row">
    <div class="col-md-8 offset-md-2">
    <table class="table">
        <thead>
                <tr style="text-align:center">
                    <th class="align-middle">@Html.DisplayNameFor(actor=>actor.ProfilePictureURL)</th>
                    <th class="align-middle">@Html.DisplayNameFor(actor=>actor.FullName)</th>
                    <th class="align-middle">@Html.DisplayNameFor(actor=>actor.Bio)</th>
                    <th class="align-middle">Actions</th>
                </tr>
        </thead>
        <tbody>
            @foreach(var actor in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img src="@actor.ProfilePictureURL" alt="@actor.FullName" class="rounded-circle" style="max-width:150px">
                    </td>
                    <td class="align-middle">
                        @actor.FullName
                    </td>
                    <td class="align-middle">
                        @actor.Bio
                    </td>
                    <td class="align-middle">
                            <a class="btn btn-primary"><i class="bi bi-pen"></i>Edit</a> |
                            <a class="btn btn-info"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-danger text-light"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>
