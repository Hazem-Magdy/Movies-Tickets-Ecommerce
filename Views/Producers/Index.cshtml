@{
    ViewData["title"] = "List Of Producers";
}
@model IEnumerable<Producer>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr style="text-align:center">
                    <th>@Html.DisplayNameFor(producer=>producer.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(producer=>producer.FullName)</th>
                    <th>@Html.DisplayNameFor(producer=>producer.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producer in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@producer.ProfilePictureURL" alt="@producer.FullName" class="rounded-circle" style="max-width:150px">
                        </td>
                        <td class="align-middle">
                            @producer.FullName
                        </td>
                        <td class="align-middle">
                            @producer.Bio
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@producer.Id"><i class="bi bi-pen"></i>Edit</a> |
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@producer.Id"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-danger text-light" asp-action="Delete" asp-route-id="@producer.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
